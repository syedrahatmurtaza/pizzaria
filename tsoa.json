{
    "entryFile": "src/index.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "spec": {
        "outputDirectory": "public",
        "specVersion": 3,
        "securityDefinitions": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "name": "authorization",
                "in": "header",
                "bearerFormat": "JWT"
            },
            "oAuth2": {
                "type": "oauth2",
                "authorizationUrl": "http://localhost:3000/user/login",
                "tokenUrl": "http://localhost:3000/user/login",
                "flow": "authorizationCode"
            }
        }
    }
}